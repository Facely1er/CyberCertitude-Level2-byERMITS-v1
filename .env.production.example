# CMMC Level 2 Compliance Platform - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# REQUIRED VARIABLES - Must be configured for production
# =============================================================================

# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# API Configuration (REQUIRED)
VITE_API_BASE_URL=https://your-api-domain.com/api

# Authentication (REQUIRED)
VITE_AUTH_ENABLED=true
VITE_ENABLE_MFA=true

# =============================================================================
# RECOMMENDED VARIABLES - Should be configured for production
# =============================================================================

# Error Monitoring & Analytics
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ANALYTICS_ID=your-analytics-id
VITE_ANALYTICS_ENABLED=true

# Security Configuration
VITE_JWT_SECRET=your-super-secure-jwt-secret-key-here
VITE_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ADVANCED_FEATURES=true
VITE_ENABLE_REAL_TIME_MONITORING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# OPTIONAL VARIABLES - For enhanced functionality
# =============================================================================

# Email Configuration (for MFA and notifications)
VITE_EMAIL_SERVICE_URL=https://your-email-service.com/api
VITE_EMAIL_API_KEY=your-email-service-api-key

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_CACHE_DURATION=3600

# Development/Debug (should be false in production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit this file with real values to version control
# 2. Use strong, unique secrets for JWT_SECRET and ENCRYPTION_KEY
# 3. Rotate keys regularly (quarterly recommended)
# 4. Use environment-specific values (dev/staging/prod)
# 5. Consider using a secrets management service for production